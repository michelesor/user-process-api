<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="user-batch-test-suite.xml" />
	<munit:test name="user-batch-test-suite-create-users-implementation-flowTest" doc:id="93e5c06b-efbb-4272-b1e9-1e87723b7a5c" description="Test">
		<munit:behavior>
			<munit-tools:mock-when doc:name="Mock transformation csv to json" doc:id="f86ba118-1c74-469e-9a91-f41851ba81d9" processor="ee:transform">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="transform csv in json" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="53881ccc-087f-42c0-8367-efe3437e2164" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[[&#10;  {&#10;    "id": "1",&#10;    "nome": "Michele",&#10;    "cognome": "Sorbo",&#10;    "citta": "Caserta",&#10;    "eta": 26,&#10;    "email": "michelesorbo0@gmail.com"&#10;  }&#10;]]' />
				</munit-tools:then-return>
			</munit-tools:mock-when>
			<munit-tools:mock-when doc:name="Mock HTTP Request" doc:id="6fefcdde-525f-4068-821a-3eb82181fed5" processor="http:request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="POST" attributeName="method" />
					<munit-tools:with-attribute whereValue="Request POST /users" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="3c2cd0f1-4fe1-4f23-afe0-23ed3c7c3ebd" attributeName="doc:id" />
					<munit-tools:with-attribute whereValue="Database_System_HTTP_Request_configuration" attributeName="config-ref" />
					<munit-tools:with-attribute whereValue="${database-sys.path}" attributeName="path" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[[&#10;  {&#10;    "id": "123456789"&#10;  }&#10;]]' mediaType="application/json" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
			<munit-tools:mock-when doc:name="Mock ELAB" doc:id="8ebed118-0040-4a14-bcf4-18fd685846be" processor="file:move">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Move to ELAB" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="1c2a4e39-eef6-451a-a265-a540b0ca8fbe" attributeName="doc:id" />
					<munit-tools:with-attribute whereValue="#[vars.sourcePath]" attributeName="sourcePath" />
					<munit-tools:with-attribute whereValue="#[p('create-users.elab')]" attributeName="targetPath" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:attributes value="#[p('create-users.elab')]" />
					<munit-tools:variables >
						<munit-tools:variable key="sourcePath" value='"C:/users/michele/csv"' />
					</munit-tools:variables>
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="aca5757d-9a5f-4c65-ba78-f495c3e7626b">
				<munit:payload value='#[%dw 2.0&#10;output text/plain&#10;---&#10;"id,nome,cognome,eta,citta ,email&#10;1;Michele;Sorbo;Caserta;26;michelesorbo0@gmail.com"]' />
			</munit:set-event>
			<flow-ref doc:name="create-users-implementation-flow" doc:id="9c1e3589-22b8-456c-8319-ee3dd09b05a5" name="create-users-implementation-flow"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-that doc:name="Assert that" doc:id="4615803a-d1ea-46d4-8af0-aace012f7ecc" expression="#[payload]" is="#[MunitTools::withMediaType('application/json')]"/>
		</munit:validation>
	</munit:test>


</mule>
